generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TodoState {
  PENDING
  IN_PROGRESS
  ON_HOLD
  DONE
}

model Todo {
  id       Int  @id @default(autoincrement())
  parentId Int?

  title    String    @db.VarChar(255)
  contents String    @default("") @db.Text
  state    TodoState @default(PENDING)

  date     DateTime  @default(now()) @db.Timestamp(6)
  deadline DateTime? @db.Timestamp(6)

  parent   Todo?  @relation("TodoToChildren", fields: [parentId], references: [id], onDelete: Cascade)
  children Todo[] @relation("TodoToChildren")

  @@index([parentId])
  @@index([state])
  @@map("todos")
}
